import { Injectable } from '@angular/core';
import { isAndroid, isIOS } from '@nativescript/core';

@Injectable({
  providedIn: 'root'
})
export class PlatformService {
  getPlatform(): string {
    return isAndroid ? 'Android' : isIOS ? 'iOS' : 'Unknown';
  }

  isRunningOnAndroid(): boolean {
    return isAndroid;
  }
}
import { Component, OnInit } from '@angular/core';
import { PlatformService } from '../../core/platform.service';

@Component({
  selector: 'ns-items',
  templateUrl: './items.component.html',
  styleUrls: ['./items.component.css']
})
export class ItemsComponent implements OnInit {
  public items: string[] = [];
  public platformMessage: string = '';

  constructor(private platformService: PlatformService) {}

  ngOnInit(): void {
    this.items = ['Elemento 1', 'Elemento 2', 'Elemento 3', 'Elemento 4'];

    // Asigna un valor solo en Android (requisito 10)
    if (this.platformService.isRunningOnAndroid()) {
      this.platformMessage = 'Este dispositivo es Android';
    } else {
      this.platformMessage = 'Este dispositivo NO es Android';
    }
  }
}
<ActionBar title="Mis Elementos" class="action-bar"></ActionBar>

<StackLayout class="page">
  <Label [text]="platformMessage" class="platform-label"></Label>

  <ListView [items]="items" class="list-group">
    <ng-template let-item="item">
      <Label [text]="item" class="list-group-item"></Label>
    </ng-template>
  </ListView>
</StackLayout>
